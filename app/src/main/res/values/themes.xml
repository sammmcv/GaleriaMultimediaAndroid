    </style>
    
    <!-- Tema ESCOM para AppCompat (Claro) -->
    <style name="Theme.Practica3_1.ESCOM" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/escom_primary_light</item>
        <item name="colorPrimaryVariant">@color/escom_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/escom_secondary_light</item>
        <item name="colorSecondaryVariant">@color/escom_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
